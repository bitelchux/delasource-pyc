<?xml version="1.0" encoding="UTF-8" ?>
    <widget xmlns = "http://www.w3.org/ns/widgets"
        xmlns:gap = "http://phonegap.com/ns/1.0"
        id        = "com.delasource.tvlistings"
        versionCode="1" 
        version   = "1.0.0">

    <!-- versionCode is optional and Android only -->

    <name>Tv Listings</name>

    <description>
      Find out what's on TV today anytime with a few taps of your finger.
    </description>

    <author href="https://build.phonegap.com" email="bitelchux@yahoo.es">
	Julio Fuente
    </author>

      <preference name="phonegap-version"           value="2.5.0" />
      <!-- all: current version of PhoneGap -->
      <access origin="*" />
      
      <preference name="permissions"                value="none"/>
      <icon src="icon.png" />
      <!--
      <icon src="57x57.png"            gap:platform="ios"        width="57" height="57" />
      <icon src="72x72.png"            gap:platform="ios"        width="72" height="72" />
      
      <icon src="icon48.png"  gap:platform="winphone" />
      <icon src="icon173.png" gap:platform="winphone"   gap:role="background" />
      -->
      <icon src="icon.png" gap:platform="winphone"   gap:role="background" />
      <gap:splash src="splash.png" />
      <plugin name="Notification" value="org.apache.cordova.Notification"/>
      
</widget>